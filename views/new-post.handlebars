<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Create Post</span>
                <form action="#">
                    <div class="file-field input-field">
                        <div class="btn">
                            <span>Press to select an image to upload</span>
                            <input name="image" type="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" name="image">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea name="description-body" id="textarea2" class="materialize-textarea" data-length="120"></textarea>
                            <label for="textarea2">Enter text</label>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="new-post-form">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/add-post.js"></script>