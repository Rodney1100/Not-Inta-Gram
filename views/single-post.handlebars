<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image">
        <img src={{post.image_url}}>
      </div>
      <a class="waves-effect waves-light btn" id="like-btn"><i class="material-icons">thumb_up</i></a>
      {{like.count}} {{format_plural "like" like.count}}
      <a class="waves-effect waves-light btn red" id="dislike-btn"><i class="material-icons">thumb_down</i></a>
      <div class="card-content">
        {{!-- {{dislike.count}} {{format_plural "dislike" dislike.count}} --}}
        <span class="card-title">{{post.user.username}}</span>
        <p>{{post.description}}</p>
        {{format_date post.created_at}}
      </div>
    </div>
  </div>

  <script src="/javascript/like.js"></script>