<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <h2>Edit Post</h2>
        <div class="row">
          <form class="col s12" id="edit-post-form">
            <div class="row">
              <div class="card-image">
                <img src={{post.image_url}}>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <span class="card-title">{{post.user.username}}</span>
                <textarea id="description-body" class="materialize-textarea">{{post.description}}</textarea>
              </div>
            </div>
            <div>
              <button type="submit" class="btn">Update Post</button>
              <button type="button" class="delete-post-btn btn">Delete Post</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script type="module" src="/javascript/delete-post.js"></script>