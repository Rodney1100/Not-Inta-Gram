{{! <div class="row"> }}
<div class="col s12 m6">
  <div class="card">
    <div class="card-content">
      <h3 class="center">Edit Post</h3>
      <div class="row">
        <form class="col s12" id="edit-post-form">
          <div class="row">
            {{!-- <div class="col">
                <h4 id="image-name" name="image-name">{{post.image_name}}</h4>
                <h4>{{post.id}}</h4>
              </div> --}}
            <div class="card-image">
              <img src={{post.image_url}} />
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea
                id="description-body"
                class="materialize-textarea"
              >{{post.description}}</textarea>
            </div>
          </div>
          <div>
            <button type="submit" class="btn">Update Post</button>
            <button type="button" class="delete-post-btn btn">Delete Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{! </div> }}

<script src="/javascript/edit-post.js"></script>
<script type="module" src="/javascript/delete-post.js"></script>