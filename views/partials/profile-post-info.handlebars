<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image">
                <img src={{image_url}}>
            </div>
            <div class="center-align">
            <a href="/post/{{id}}" class="waves-effect waves-light green" id="like-btn"><i
                    class="material-icons">thumb_up</i></a>
            {{likes.count}} {{format_plural "like" likes.count}}
            <a href="/post/{{id}}" class="waves-effect waves-light red" id="dislike-btn"><i
                    class="material-icons">thumb_down</i></a>
            {{dislike.count}} {{format_plural "dislike" dislike.count}}
            </div>
            <div class="card-content">
                <span class="card-title">{{user.username}}</span>
                <p>{{description}}</p>
                {{format_date created_at}}
                <a class="waves-effect waves-light btn" href="profile/edit/{{id}}">Edit post</a>
            </div>
        </div>
    </div>
</div>