<div class="row">
  <div class="posts1 s6 center profile100 hoverable">
    <div class="discription card">
      <div class="card-image">
        <img src={{image_url}} />
      </div>
      <div class="center-align">
        <a
          href="/post/{{id}}"
          class="waves-effect waves-light btn green"
          id="like-btn"
        ><i class="material-icons">thumb_up</i></a>
        {{like.count}}{{format_plural "like" like.count}}
        <a
          href="/post/{{id}}"
          class="waves-effect waves-light btn red"
          id="dislike-btn"
        ><i class="material-icons">thumb_down</i></a>
        {{dislike.count}}
        {{format_plural "dislike" dislike.count}}
      </div>
      {{! <button type="button" class="delete-post-btn btn">Edit Post</button> }}
      <div class="card-content">
        <span class="card-title">{{user.username}}</span>
        <p>{{description}}</p>
        {{format_date created_at}}
      </div>
    </div>
  </div>
</div>