<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image">
                <img src={{image_url}}>
            </div>
            {{like_count}} {{format_plural "like" like_count}}
            <div class="card-content">
                <span class="card-title">{{user.username}}</span>
                <p>{{description}}</p>
                <a class="waves-effect waves-light btn" href="profile/edit/{{id}}">Edit post</a>
            </div>
        </div>
    </div>
</div>