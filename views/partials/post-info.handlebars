<div class="row">
    <div class=" col s12 m6">
        <div class="post-container card">
            <div class="card-image">
                <img src={{image_url}}>
            </div>
            {{like_count}} {{format_plural "like" like_count}}
            <div class="card-content">
                <span class="card-title">{{user.username}}</span>
                <p>{{description}}</p>
            </div>
        </div>
    </div>
</div>